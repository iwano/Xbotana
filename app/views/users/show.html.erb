<% provide(:title, @user.name) %>
<div class="well catalogsSidebar">
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	</section>

	<div class="span4">
	<h3><%= @user.email %></h3>
	<h3><%= @user.phone_number %></h3>
	<h3><%= @user.mobile_phone %></h3>
	<h3><%= @user.address %></h3>
	<h3><%= @user.rfc %></h3>
	<h3><%= @user.state.name %></h3>
	<h3><%= @user.city.name %></h3>
    </div>
	</aside>
</div>
</div>

