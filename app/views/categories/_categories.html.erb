<table class='table-striped table'>  
	<tr>
		<th>Name</th>
		    <th>No. products</th>
		    <th></th>
		    <th></th>
			<th></th>
		 </tr>

	<% @categories.each do |category| %>
		<tr>
			<td><h4><%= link_to category.name, category%></h4></td>
			<td><h4><%= category.products.count %></h4></td>
			<td><%= link_to 'Show', category, class: 'btn btn_small btn-primary' %></td>
			<td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn_small btn-warning'%></td>
			<td><%= link_to 'Delete', category, method: :delete, confirm: 'Are you sure?', class: 'btn btn_small btn-danger'%></td>
		</tr>
	<% end %>
</table>  
