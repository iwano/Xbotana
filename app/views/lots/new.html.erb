<%= provide(:title, 'New Lot') %>

<h1>New Lot </h1>

<div class="row">
  <div class="span6 offset2">
    <%= form_for(@lot) do |f| %>
	      <%= render 'shared/error_messages', object: f.object %>

		  <%= f.label :number %>
	      <%= f.text_field :number, required: true %>
	
		  <%= f.label :expiry_date %>
	      <%= f.text_field :expiry_date, required: true, placeholder: "e.g. 2012-03-21" %>

	      <%= f.submit "Add", class: "btn btn-large btn-primary" %>
		  <%= link_to "Cancel", lots_path, class: "btn" %>
	<% end %>
  </div>
</div>

<%= link_to "All lots",   lots_path %>