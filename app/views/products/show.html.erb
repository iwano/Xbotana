<% provide(:title, @product.name) %>
<div class="span9">
   
	<div class="span5">
		
	     <h1>
	       <%= @product.name %>
	     </h1>
	
	<div class="row-fluid">
		<div class="span5">
			<h2>Category:</h2>
		</div>
		<div class="span6">
			<h3><%= link_to @product.category.name, @product.category %></h3>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5">
			<h2>Price:</h2>
		</div>
		<div class="span6">
			<h3><%= number_to_currency (@product.price) %></h3>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5">
			<h2>Lot:</h2>
		</div>
		<div class="span6">
			<h3><%= link_to @product.lot.number, @product.lot %></h3>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5">
			<h2>Quantity:</h2>
		</div>
		<div class="span7">
			<h3><%= @product.quantity %></h3>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5">
			<h2>Description:</h2>
		</div>
		<div class="span7">
			<h3><%= @product.description %></h3>
		</div>
	</div>
    </div>

	<% if current_user.admin?%>
	<div class="span3">
		<ul>
		  	<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning'%>
		  </ul>
		<ul>
		  	<%= link_to 'Delete', @product, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'%>
		</ul>
	</div>
	<%else%>
		<div class="span3">	
			<div class="well catalogsSidebar add_form">
				<% if @product.quantity == 0%>
					<%= label :post, :title, 'Sorry there are no more items available in stock :(', class: 'sorryNoStock' %>
				<%else%>
					<%= form_for(@cart_product, remote: true) do |f| %>
						<%= f.hidden_field :product_id, :value => @product.id %>
			  			<%= f.hidden_field :price, :value => @product.price %>
						<ul>
			  				<%= f.label :quantity %>
						</ul>
						<ul>
							<%= select("cart_product", "quantity", (1..@product.quantity).step(1).collect {|p| [ "#{p}", p ] }, { include_blank: true }, class: 'cmb_quantity', id: "cart_product_quantity") %>
						</ul>
						<%= f.submit '+ Add to cart', class: 'btn btn-success', id: "addToCart"%>
					<% end %>
				<%end%> 
			</div>
		</div>
	<%end%>
</div>
	<%= link_to "All products",   products_path %>



