    <table class="table-striped table">  
		 <tr>
			<th>Name</th>
		    <th>Category</th>
		    <th>Price</th>
		    <th>Description</th>
			<th></th>
			<% if current_user.admin?%>
				<th></th>
				<th></th>
			<%end%>
		 </tr>

		<% @products.each do |product| %>

		<tr>
		  <td><h4><%= link_to product.name, product%> </h4></td>
		  <td><h4><%=link_to product.category.name, product.category %></h4></td>
		  <td><h4><%= product.price %></h4></td>
		  <td><h4><%= product.description%></h4></td>
		  <td><%= link_to 'Show', product, class: 'btn btn-small btn-primary' %></td>
		  <% if current_user.admin?%>
		  	<td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-small btn-warning'%></td>
		  	<td><%= link_to 'Delete', product, method: :delete, confirm: 'Are you sure?', class: 'btn btn-small btn-danger'%></td>
		  <% end %>
		</tr>
		<% end %>
	</table>  
	<br />
 

