<% provide(:title, "Edit product") %> 
<h1>Edit Product</h1>

<div class="span6 offset2">
  <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

	  <%= f.label :category_id %>
	  <%= f.collection_select :category_id, Category.all, :id , :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

	  <%= f.label :price %>
      <%= f.text_field :price %>

 	  <%= f.label :lot_id %>
      <%= f.collection_select :lot_id, Lot.all, :id , :number %>

	  <%= f.label :presentation_id %>
      <%= f.collection_select :presentation_id, Presentation.all, :id , :name %>

	  <%= f.label :quantity %>
      <%= f.text_field :quantity %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

</div>