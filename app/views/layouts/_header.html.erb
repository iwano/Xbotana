<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "botanaX", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<form class="navbar-search pull-left" action="">
						<i class="icon-search icon-white"></i> <input type="text" class="search-query span2" placeholder="Search">
					</form>
					<li class="active">
						<a href= '/' title="Home">
						<i class="icon-home icon-white"></i>
						</a>
					</li>
					<% if signed_in? %>
						<% if current_user.admin?%>
							<li id="fat-menu" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target=".nav-collapse">
									<i class="icon-th-list icon-white"></i> <b class="caret"></b>
								</a>
								<ul class="dropdown-menu">
									<li><%= link_to "Users", users_path %></li>
									<li><%= link_to "Products", products_path %></li>
									<li><%= link_to "Categories", categories_path %></li>
									<li><%= link_to "States", states_path %></li>
									<li><%= link_to "Cities", cities_path %></li>
									<li><%= link_to "Presentations", presentations_path %></li>
									<li><%= link_to "Lots", lots_path %></li>
									<li><%= link_to "Orders", orders_path %></li>
									<li><%= link_to "Routes", '#' %></li>
								</ul>
							</li>
						<%elsif current_user.hos?%>
							<li>
								<a href= '/routes' title="Routes">
								<i class="icon-road icon-white"></i>
								</a>
							</li>
							<li>
								<a href= '/route_details' title="Route details">
								<i class="icon-list icon-white"></i>
								</a>
							</li>
						<%else%>
							<li>
								<a href= '/cart' title="Shopping cart">
								<i class="icon-shopping-cart icon-white"></i>
								</a>
							</li>
							<li>
								<a href= '/orders' title="Orders">
								<i class="icon-th-list icon-white"></i>
								</a>
							</li>
						<%end%>
						<li>
							<a href= '/help'  title="Help">
							<i class="icon-question-sign icon-white"></i>
							</a>
						</li>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target=".nav-collapse">
								Account <b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to raw('<i class="icon-user"></i> Profile'), current_user %></li>
								<li><%= link_to raw('<i class="icon-cog"></i> Settings'), edit_user_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to raw('<i class="icon-off"></i> Sign out'), signout_path, method: "delete" %></li>
							</ul>
						</li>
					<%else%>
					<li>
						<a href= '/help'  title="Help">
						<i class="icon-question-sign icon-white"></i>
						</a>
					</li>
						<li><%= link_to "Sign in", signin_path %></li>
					<% end %>
	
				</ul>
			</nav>
		</div>
	</div>
</header>