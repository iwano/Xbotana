<% @cities.each do |city| %>
    <li>
		<div class="row-fluid">
		  <div class="span2">
		  	<h4><%= city.name%></h4>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Show', city, class: 'btn btn-primary' %>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Edit', edit_city_path(city), class: 'btn btn-warning'%>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Delete', city, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'%>
		  </div>
		</div>
    </li>
 <% end %>

