<% provide(:title, 'All Routes') %>
<h1>All Routes</h1>
<ul data-role="listview" data-theme="c">
<li data-role="list-divider"></li>
	<% @routes.each do |route| %>
		<% if current_user.vendor? %>
			<li>
			<%= link_to route.id, route %> - <%= route.finished ? 'finished' : 'not finished'%>
			<%= route.route_details.count%> stops</li>
		<%else%>
			<%= link_to route.id, route %> - <%= route.finished ? 'finished' : 'not finished'%>
			<%= route.user.name%>
			<%= route.route_details.count%> stops</li>
		<%end%>
	<% end %>
</ul>