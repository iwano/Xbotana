<% provide(:title, 'All Routes') %>
<h1>All Routes</h1>
<ul data-role="listview" data-theme="c">
<li data-role="list-divider"></li>
	<% @routes.each do |route| %>
		<% if current_user.vendor? %>
			<li>
			<%= link_to "#{route.id} -  #{route.finished ? 'finished' : 'not finished'} - #{route.route_details.count} stops", route, :data => { :transition => 'slide' } %></li>
		<%else%>
			<li><%= link_to "#{route.id} -  #{route.finished ? 'finished' : 'not finished'} - #{route.route_details.count} stops", route, :data => { :transition => 'slide' } %>
			<%= route.user.name %></li>
		<%end%>
	<% end %>
</ul>