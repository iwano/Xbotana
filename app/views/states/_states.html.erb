<table class='table-striped table'>  
	 <tr>
		<th>Name</th>
		<th></th>
		<th></th>
		<th></th>   
	</tr>
	<% @states.each do |state| %>	
		<tr><td><h4><%= link_to state.name, state%></h4></td>	
		<td><%= link_to 'Show', state, class: 'btn btn-small btn-primary' %></td>
		<td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-small btn-warning'%></td>
		<td><%= link_to 'Delete', state, method: :delete, confirm: 'Are you sure?', class: 'btn btn-small btn-danger'%></td>
		</tr>
	<% end %>
</table>  
