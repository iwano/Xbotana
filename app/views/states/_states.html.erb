<% @states.each do |state| %>
    <li>
		<div class="row-fluid">
		  <div class="span2">
		  	<%= state.name%>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Show', state, class: 'btn btn-primary' %>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Edit', edit_state_path(state), class: 'btn btn-warning'%>
		  </div>
		  <div class="span1">
		  	<%= link_to 'Delete', state, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'%>
		  </div>
		</div>
    </li>
 <% end %>
